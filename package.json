{
  "name": "jsoncontrol",
  "version": "1.0.0",
  "description": "App for edit and visualize json",
  "main": "main.js",
  "build": {
    "appId": "jsonConverter",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sngvahmed/JsonConvert.git"
  },
  "author": "Ahmed Nasser",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sngvahmed/JsonConvert/issues"
  },
  "homepage": "https://github.com/sngvahmed/JsonConvert#readme",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "clipboard": "^2.0.4",
    "electron-toaster": "^2.0.4",
    "jquery": "^3.4.1",
    "jquery.json-viewer": "^1.4.0",
    "json2csv": "^4.5.2",
    "jsonexport": "^2.4.1",
    "objects-to-csv": "^1.3.4",
    "popper.js": "^1.15.0",
    "toastr": "^2.1.4"
  }
}
